#B
#books
def solve(n, t, books):
    start, total_time, max_books = 0, 0, 0
    for end in range(n):
        total_time += books[end]
        while total_time > t:
            total_time -= books[start]
            start += 1
        max_books = max(max_books, end - start + 1)
    return max_books
n, t = map(int, input().split())
books = list(map(int, input().split()))
print(solve(n, t, books))
